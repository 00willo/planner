dnl  -----------
dnl | GDA check |----------------------------------------------
dnl  -----------
AC_ARG_ENABLE(gda, [  --enable-gda=[no/yes]      enable GDA plugin [default=no]], enable_gda="$enableval", enable_gda=no)

gda_pkgconfig=""
if test "x$enable_gda" = "xyes" ; then
    GDA_LIBS=`$PKG_CONFIG --libs libgda`
    GDA_CFLAGS=`$PKG_CONFIG --cflags libgda`
    use_gda=yes
    gda_pkgconfig="libgda >= 1.0"
else
    use_gda=no
fi

AM_CONDITIONAL(HAVE_GDA, test x$use_gda = xyes)
AC_SUBST(GDA_LIBS)
AC_SUBST(GDA_CFLAGS)
dnl -----------------------------------------------------------


dnl ================================
dnl | planner                      |---------------------------
dnl ================================
PKG_CHECK_MODULES(PLANNER,
[
	glib-2.0 >= $GLIB_REQUIRED
	gobject-2.0 gmodule-2.0
	gtk+-2.0 >= $GTK_REQUIRED
	libgnomecanvas-2.0 >= $LIBGNOMECANVAS_REQUIRED
	libgnomeui-2.0 >= $LIBGNOMEUI_REQUIRED
	libglade-2.0 >= $LIBGLADE_REQUIRED
	libbonoboui-2.0 >= $LIBBONOBOUI_REQUIRED
	libgnomeprintui-2.2 >= $LIBGNOMEPRINTUI_REQUIRED
	gnome-vfs-2.0 >= $GNOME_VFS_REQUIRED
	gconf-2.0 >= $GCONF_REQUIRED
	$gda_pkgconfig
])

AC_SUBST(PLANNER_CFLAGS)
AC_SUBST(PLANNER_LIBS)
dnl -----------------------------------------------------------

dnl ================================
dnl | libplanner                   |---------------------------
dnl ================================
PKG_CHECK_MODULES(LIBPLANNER,
[
	glib-2.0 >= $GLIB_REQUIRED
	libxml-2.0 >= $LIBXML_REQUIRED
	gobject-2.0 gmodule-2.0
	libgsf-1 >= $LIBGSF_REQUIRED
	gnome-vfs-2.0 >= $GNOME_VFS_REQUIRED
])

AC_SUBST(LIBPLANNER_CFLAGS)
AC_SUBST(LIBPLANNER_LIBS)
dnl -----------------------------------------------------------


